<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- Put site-specific property overrides in this file. -->

<configuration>
	<!-- データ配置 -->
	<property>
		<name>dfs.replication</name>
		<value>2</value>
	</property>
	<property>
		<name>dfs.block.size</name>
		<value>134217728</value>
	</property>
	<property>
		<name>dfs.datanode.du.reserved</name>
		<value>536870912000</value>
	</property>
	<property>
		<name>dfs.data.dir</name>
		<value>/mnt/sda/hadoop/data/,/mnt/sdb/hadoop/data/,/mnt/sdc/hadoop/data/
		</value>
	</property>

	<!--  safe mode -->
	<property>
		<name>dfs.safemode.threshold.pct</name>
		<value>0</value>
		<description>safemodeにしない</description>
	</property>

	<!-- ハンドラスレッド -->
	<property>
		<name>dfs.namenode.handler.count</name>
		<value>20</value>
	</property>
	<property>
		<name>dfs.datanode.handler.count</name>
		<value>15</value>
	</property>

	<!-- セキュリティ周り -->
	<property>
		<name>dfs.permissions</name>
		<value>false</value>
	</property>
	<property>
		<name>dfs.umaskmode</name>
		<value>077</value>
	</property>
</configuration>
