<configuration>

  <property>
    <name>mapred.child.java.opts</name>
    <value>-Xmx1024m</value>
  </property>

  <property>
    <name>mapred.job.tracker</name>
    <value>mapr01:8021</value>
  </property>

  <property>
    <name>mapred.local.dir</name>
    <value>/hadoop/mapred/local</value>
  </property>

  <property>
