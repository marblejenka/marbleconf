	<property>
		<name>dfs.namenode.handler.count</name>
		<value>20</value>
		<final>true</final>
	</property>
	<property>
		<name>dfs.datanode.handler.count</name>
		<value>15</value>
		<final>true</final>
	</property>

	<!-- Permissions configuration -->
	<property>
		<name>dfs.umaskmode</name>
		<value>077</value>
	</property>

	<property>
		<name>dfs.permissions</name>
		<value>false</value>
	</property>

	<property>
		<name>dfs.permissions.supergroup</name>
		<value>hadoop</value>
	</property>

	<property>
		<name>dfs.access.time.precision</name>
		<value>0</value>
	</property>
</configuration>
