<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- Put site-specific property overrides in this file. -->

<configuration>
	<!-- YARNを使用する -->
	<property>
		<name>mapreduce.framework.name</name>
		<value>yarn</value>
	</property>

	<!-- タスク取得の効率化 要確認 -->
	<property>
		<name>mapreduce.tasktracker.outofband.heartbeat</name>
		<value>true</value>
	</property>

	<!-- jvm起動のオーバーヘッド回避 -->
	<property>
		<name>mapreduce.job.jvm.numtasks</name>
		<value>1</value>
	</property>

	<!-- スロットとタスク割り当て -->
	<property>
		<name>mapreduce.tasktracker.map.tasks.maximum</name>
		<value>4</value>
		<final>true</final>
	</property>
	<property>
		<name>mapreduce.tasktracker.reduce.tasks.maximum</name>
		<value>2</value>
		<final>true</final>
	</property>
	<property>
		<name>mapreduce.job.maps</name>
		<value>16</value>
	</property>
	<property>
		<name>mapreduce.job.reduces</name>
		<value>8</value>
	</property>

	<!--投機的実行の無効化 -->
	<property>
		<name>mapreduce.map.speculative</name>
		<value>false</value>
	</property>
	<property>
		<name>mapreduce.reduce.speculative</name>
		<value>false</value>
	</property>

	<!-- メモリ管理 -->
	<property>
		<name>mapreduce.map.memory.mb</name>
		<value>4096</value>
	</property>
	<property>
		<name>mapreduce.map.java.opts</name>
		<value>-Xms3072m -Xmx3072m</value>
	</property>
	<property>
		<name>mapreduce.reduce.memory.mb</name>
		<value>4096</value>
	</property>
	<property>
		<name>mapreduce.reduce.java.opts</name>
		<value>-Xms3072m -Xmx3072m</value>
	</property>

	<!-- メモリ監視 -->
	<property>
		<!-- 要確認 -->
		<name>mapreduce.map.memory.physical.mb</name>
		<value>2048</value>
		<final>true</final>
	</property>
	<property>
		<!-- 要確認 -->
		<name>mapreduce.reduce.memory.physical.mb</name>
		<value>4096</value>
		<final>true</final>
	</property>
	<property>
		<name>mapreduce.tasktracker.taskmemorymanager.monitoringinterval
		</name>
		<final>true</final>
		<value>5000</value>
	</property>
	<property>
		<!-- 要確認 -->
		<name>mapreduce.tasktracker.reserved.physicalmemory.mb</name>
		<value>4096</value>
		<final>true</final>
	</property>

	<!-- ジョブ入出力の効率化 -->
	<property>
		<name>mapreduce.output.fileoutputformat.compress.type</name>
		<value>BLOCK</value>
	</property>

	<!-- シャッフルフェーズの効率化 -->
	<property>
		<name>mapreduce.task.io.sort.mb</name>
		<value>768</value>
		<description>map</description>
	</property>
	<property>
		<!-- 要確認 -->
		<name>io.sort.record.percent</name>
		<value>0.2</value>
		<description>map/reduce</description>
	</property>
	<property>
		<name>mapreduce.map.sort.spill.percentt</name>
		<value>0.95</value>
		<description>map reduce</description>
	</property>
	<property>
		<name>mapreduce.task.io.sort.factor</name>
		<value>200</value>
		<description>map/reduce</description>
	</property>
	<property>
		<name>mapreduce.map.output.compress</name>
		<value>true</value>
		<description>map</description>
	</property>
	<property>
		<name>mapreduce.map.output.compress.codec</name>
		<value>org.apache.hadoop.io.compress.SnappyCodec</value>
		<description>map</description>
	</property>
	<property>
		<name>mapreduce.tasktracker.http.threads</name>
		<value>80</value>
		<description>map</description>
	</property>
	<property>
		<name>mapreduce.reduce.shuffle.parallelcopies</name>
		<value>4</value>
		<description>reduce</description>
	</property>
	<property>
		<name>mapreduce.reduce.shuffle.input.buffer.percent</name>
		<value>0.95</value>
		<description>reduce</description>
	</property>
	<property>
		<name>mapreduce.reduce.shuffle.merge.percent</name>
		<value>0.95</value>
		<description>reduce</description>
	</property>
	<property>
		<name>mapreduce.reduce.merge.inmem.threshold</name>
		<value>20000</value>
		<description>reduce</description>
	</property>
	<property>
		<name>mapreduce.reduce.input.buffer.percent</name>
		<value>0.95</value>
		<description>reduce</description>
	</property>
	<property>
		<name>mapreduce.job.reduce.slowstart.completedmaps</name>
		<value>0</value>
	</property>


	<property>
		<name>mapreduce.cluster.local.dir</name>
		<value>/mnt/sda/cdh4/mapred/local,/mnt/sdb/cdh4/mapred/local,/mnt/sdc/cdh4/mapred/local
		</value>
		<final>true</final>
	</property>

	<!-- Histroy Server -->
	<property>
		<name>mapreduce.jobhistory.address</name>
		<value>${local.resourcemanager}:10020</value>
	</property>
	<property>
		<name>mapreduce.jobhistory.webapp.address</name>
		<value>${local.resourcemanager}:19888</value>
	</property>

	<!-- 未整理 要確認 -->
	<property>
		<name>mapred.system.dir</name>
		<value>/user/mapred/system</value>
		<final>true</final>
	</property>

	<property>
		<name>mapred.temp.dir</name>
		<value>/var/lib/hadoop-0.20/cache/mapred/tmp</value>
		<final>true</final>
	</property>

	<property>
		<name>mapred.jobtracker.restart.recover</name>
		<value>false</value>
	</property>

	<property>
		<name>jetty.connector</name>
		<value>org.mortbay.jetty.nio.SelectChannelConnector</value>
	</property>

	<property>
		<name>mapred.task.tracker.task-controller</name>
		<value>org.apache.hadoop.mapred.LinuxTaskController</value>
	</property>

	<property>
		<name>mapred.child.root.logger</name>
		<value>INFO,TLA</value>
	</property>

	<property>
		<name>mapred.job.tracker.persist.jobstatus.active</name>
		<value>true</value>
	</property>

	<property>
		<name>mapred.job.tracker.persist.jobstatus.dir</name>
		<value>file:///var/local/cdh4/mapred/jobstatus</value>
	</property>

	<property>
		<name>mapred.job.tracker.history.completed.location</name>
		<value>/var/local/cdh4/mapred/history/done</value>
	</property>

	<property>
		<name>mapreduce.jobtracker.staging.root.dir</name>
		<value>/user</value>
	</property>
</configuration>
