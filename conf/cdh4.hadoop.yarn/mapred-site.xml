	<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- Put site-specific property overrides in this file. -->

<configuration>

	<!-- YARN -->
	<property>
		<name>mapreduce.framework.name</name>
		<value>yarn</value>
	</property>


	<!-- タスク取得の効率化 -->
	<property>
		<name>mapreduce.tasktracker.outofband.heartbeat</name>
		<value>true</value>
	</property>

	<!-- jvm起動のオーバーヘッド回避 -->
	<property>
		<name>mapred.job.reuse.jvm.num.tasks</name>
		<value>1</value>
		<!-- <value>-1</value> -->
		<description>cdh4u0のmrv1だとJVMを再利用させるとMRが動かないっぽい。本質的な問題はとりあえずおいておく。
			http://stackoverflow.com/questions/10622040/jvm-reuse-in-hadoop-mapreduce-job
		</description>
	</property>

	<!-- スケジューラー -->
	<property>
		<name>mapred.jobtracker.taskScheduler</name>
		<value>org.apache.hadoop.mapred.FairScheduler</value>
		<final>true</final>
	</property>
	<property>
		<name>mapred.fairscheduler.allocation.file</name>
		<value>/etc/hadoop/conf/allocations.xml</value>
		<final>true</final>
	</property>

	<!-- スロットとタスク割り当て -->
	<property>
		<name>mapred.tasktracker.map.tasks.maximum</name>
		<value>4</value>
		<final>true</final>
	</property>
	<property>
		<name>mapred.tasktracker.reduce.tasks.maximum</name>
		<value>2</value>
		<final>true</final>
	</property>
	<property>
		<name>mapred.map.tasks</name>
		<value>16</value>
	</property>
	<property>
		<name>mapred.reduce.tasks</name>
		<value>8</value>
	</property>

	<!--投機的実行の無効化 -->
	<property>
		<name>mapred.map.tasks.speculative.execution</name>
		<value>false</value>
	</property>
	<property>
		<name>mapred.reduce.tasks.speculative.execution</name>
		<value>false</value>
	</property>

	<property>
		<name>mapred.map.child.java.opts</name>
		<value>-Xms1024m -Xmx1024m</value>
	</property>
	<property>
		<name>mapred.reduce.child.java.opts</name>
		<value>-Xms3072m -Xmx3072m</value>
	</property>

	<!-- メモリ監視 -->
	<property>
		<name>mapreduce.map.memory.physical.mb</name>
		<value>2048</value>
		<final>true</final>
	</property>
	<property>
		<name>mapreduce.reduce.memory.physical.mb</name>
		<value>4096</value>
		<final>true</final>
	</property>
	<property>
		<name>mapreduce.tasktracker.taskmemorymanager.monitoringinterval
		</name>
		<final>true</final>
		<value>5000</value>
	</property>
	<property>
		<name>mapreduce.tasktracker.reserved.physicalmemory.mb</name>
		<value>4096</value>
		<final>true</final>
	</property>

	<!-- ジョブ入出力の効率化 -->
	<property>
		<name>mapred.output.compression.type</name>
		<value>BLOCK</value>
	</property>

	<!-- シャッフルフェーズの効率化 -->
	<property>
		<name>io.sort.mb</name>
		<value>768</value>
		<description>map</description>
	</property>
	<property>
		<name>io.sort.record.percent</name>
		<value>0.2</value>
		<description>map reduce</description>
	</property>
	<property>
		<name>io.sort.spill.percent</name>
		<value>0.95</value>
		<description>map reduce</description>
	</property>
	<property>
		<name>io.sort.factor</name>
		<value>200</value>
		<description>map reduce</description>
	</property>
	<property>
		<name>mapred.compress.map.output</name>
		<value>true</value>
		<description>map</description>
	</property>
	<property>
		<name>mapred.map.output.compression.codec</name>
		<value>org.apache.hadoop.io.compress.SnappyCodec</value>
		<description>map</description>
	</property>
	<property>
		<name>tasktracker.http.threads</name>
		<value>80</value>
		<description>map</description>
	</property>
	<property>
		<name>mapred.reduce.parallel.copies</name>
		<value>4</value>
		<description>reduce</description>
	</property>
	<property>
		<name>mapred.job.shuffle.input.buffer.percent</name>
		<value>0.95</value>
		<description>reduce</description>
	</property>
	<property>
		<name>mapred.job.shuffle.merge.percent</name>
		<value>0.95</value>
		<description>reduce</description>
	</property>
	<property>
		<name>mapred.inmem.merge.threshold</name>
		<value>20000</value>
		<description>reduce</description>
	</property>
	<property>
		<name>mapred.job.reduce.input.buffer.percent</name>
		<value>0.95</value>
		<description>reduce</description>
	</property>
	<property>
		<name>mapred.reduce.slowstart.completed.maps</name>
		<value>0</value>
	</property>
	<property>
		<name>mapred.local.dir</name>
		<value>/mnt/sda/cdh4/mapred/local,/mnt/sdb/cdh4/mapred/local,/mnt/sdc/cdh4/mapred/local
		</value>
		<final>true</final>
	</property>

	<!-- 未整理 -->
	<property>
		<name>mapred.system.dir</name>
		<value>/user/mapred/system</value>
		<final>true</final>
	</property>

	<property>
		<name>mapred.temp.dir</name>
		<value>/var/lib/hadoop-0.20/cache/mapred/tmp</value>
		<final>true</final>
	</property>

	<property>
		<name>mapred.jobtracker.restart.recover</name>
		<value>false</value>
	</property>

	<property>
		<name>jetty.connector</name>
		<value>org.mortbay.jetty.nio.SelectChannelConnector</value>
	</property>

	<property>
		<name>mapred.task.tracker.task-controller</name>
		<value>org.apache.hadoop.mapred.LinuxTaskController</value>
	</property>

	<property>
		<name>mapred.child.root.logger</name>
		<value>INFO,TLA</value>
	</property>

	<property>
		<name>mapred.job.tracker.persist.jobstatus.active</name>
		<value>true</value>
	</property>

	<property>
		<name>mapred.job.tracker.persist.jobstatus.dir</name>
		<value>file:///var/local/cdh4/mapred/jobstatus</value>
	</property>

	<property>
		<name>mapred.job.tracker.history.completed.location</name>
		<value>/var/local/cdh4/mapred/history/done</value>
	</property>

	<property>
		<name>mapreduce.jobtracker.staging.root.dir</name>
		<value>/user</value>
	</property>
</configuration>
